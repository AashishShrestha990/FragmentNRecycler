<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".framents.SignupFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/etrUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Name"
            android:inputType="text"
            android:maxLines="1" />

        <EditText
            android:id="@+id/etrPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etrUser"
            android:layout_margin="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLines="1" />


        <EditText
            android:id="@+id/etrCPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etrPassword"
            android:layout_margin="10dp"
            android:hint="Retype password"
            android:inputType="textPassword"
            android:maxLines="1" />


        <Button
            android:id="@+id/btnSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etrCPassword"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Register" />

        <TextView
            android:id="@+id/Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnSignup"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="Swipe Right for Login >>"
            android:textColor="#0000dd"
            android:textSize="20dp" />
    </RelativeLayout>
</LinearLayout>